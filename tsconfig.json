{
  "compilerOptions": {
    "target": "es6",              // Target ES6 JavaScript
    "module": "commonjs",         // Module system for Node.js
    "strict": true,               // Enable strict type-checking options
    "esModuleInterop": true,      // Enables default import compatibility
    "skipLibCheck": true,         // Skip type-checking of declaration files
    "outDir": "./dist",           // Specifies the output directory for compiled JS
    "rootDir": "./src"            // Specifies the root directory for source files
  },
  "include": ["src/**/*.ts", "src/test/index.test.ts"],     // Include all TypeScript files in src/
  "exclude": ["node_modules", "dist"]    // Exclude node_modules
}
